{
  "manifest_version": 3,
  "name": "Tinder Auto Swiper",
  "version": "1.0",
  "description": "An extension that automatically likes on Tinder",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_title": "Start Tinder Auto Swiper"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://tinder.com/*"],
      "js": ["swipe.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}